datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id       Int       @id @default(autoincrement())
  username String    @unique
  password String
  role     String
  bookings Booking[]
}

model Train {
  id             Int    @id @default(autoincrement())
  name           String
  source         String
  destination    String
  totalSeats     Int
  availableSeats Int
  version        Int    @default(0)

  bookings Booking[]
}

model Booking {
  id         Int   @id @default(autoincrement())
  userId     Int
  trainId    Int
  seatNumber Int
  user       User  @relation(fields: [userId], references: [id])
  train      Train @relation(fields: [trainId], references: [id])
}
